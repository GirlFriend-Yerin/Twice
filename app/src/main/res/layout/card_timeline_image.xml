<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_time_line_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/time_line_card_vertical_margin">

    <LinearLayout
        android:id="@+id/card_back_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/time_line_card_vertical_padding">

        <LinearLayout
            android:id="@+id/card_inner_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Field -->
            <include layout="@layout/timeline_head"/>

            <!-- Content Field -->
            <include layout="@layout/timeline_body_image"/>

            <!-- Comment Field -->
            <include layout="@layout/timeline_tail"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
