<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_line_height"
        android:background="@color/timelineHeadBack"
        android:padding="@dimen/time_line_padding">

        <ImageView
            android:id="@+id/main_profile_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_menu_button" />

        <ImageView
            android:id="@+id/main_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_setting_button" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_time_line_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/timelineCardUnderBack">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>