<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_time_line_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/time_line_card_vertical_margin">

    <LinearLayout
        android:id="@+id/card_back_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/time_line_card_vertical_padding">

        <LinearLayout
            android:id="@+id/card_inner_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/card_title_logo"
                    android:layout_width="@dimen/time_line_image_size"
                    android:layout_height="@dimen/time_line_image_size"
                    android:layout_alignParentRight="true"
                    android:padding="2dp"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/card_profile_image"
                    android:layout_width="@dimen/time_line_image_size"
                    android:layout_height="@dimen/time_line_image_size"
                    android:layout_alignParentLeft="true"
                    android:padding="2dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/card_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/time_line_image_size"
                    android:layout_toRightOf="@id/card_profile_image"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:textSize="17dp" />

            </RelativeLayout>

            <!-- Need Separator -->

            <TextView
                android:id="@+id/card_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:padding="2dp"/>

            <ImageView
                android:id="@+id/card_content_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/card_thumbs_up"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
