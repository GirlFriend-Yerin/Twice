<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_timeline_twitter_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/timeline_card_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Retweet Sataus Field -->
        <TextView
            android:id="@+id/card_retweet_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_profile_image" />

        <!-- Title Field Start -->

        <ImageView
            android:id="@+id/card_profile_image"
            android:layout_width="@dimen/timeline_profile_size"
            android:layout_height="@dimen/timeline_profile_size"
            android:layout_below="@id/card_retweet_status"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:padding="@dimen/timeline_profile_item_padding"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/card_timeline_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_retweet_status"
            android:layout_toEndOf="@id/card_profile_image">

            <ImageView
                android:id="@+id/card_title_logo"
                android:layout_width="@dimen/timeline_image_size"
                android:layout_height="@dimen/timeline_image_size"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/card_title_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/timeline_image_size"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/card_title_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/timeline_time_text_size"
                android:layout_below="@id/card_title_text"
                android:layout_alignParentStart="true"
                android:paddingLeft="3dp" />

        </RelativeLayout>

        <!-- Title Field End -->

        <!-- Content Field Start -->

        <TextView
            android:id="@+id/card_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_timeline_top"
            android:layout_alignStart="@id/card_timeline_top"
            android:padding="2dp"
            android:textSize="15dp" />

        <sysproj.seonjoon.twice.view.TimelineImagePager
            android:id="@+id/card_content_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_content_text"
            android:padding="2dp" />

        <TextView
            android:id="@+id/card_content_image_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_content_image_view"
            android:layout_alignEnd="@+id/card_content_image_view"
            android:layout_margin="3dp"
            android:background="@color/timelineCardImageCountBack"
            android:foreground="@color/timelineCardImageCountFont"
            android:padding="5dp" />

        <!-- Content Field End -->

        <!-- Comment Field Start -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_content_image_view"
            android:layout_toEndOf="@id/card_profile_image"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="1">

            <Button
                android:id="@+id/card_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@null"
                android:textSize="@dimen/timeline_comment_text_size" />

            <Button
                android:id="@+id/card_thumbs_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@null"
                android:textSize="@dimen/timeline_comment_text_size" />

            <Button
                android:id="@+id/card_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@null"
                android:textSize="@dimen/timeline_comment_text_size" />

        </LinearLayout>

        <!-- Comment Field End -->

    </RelativeLayout>

</android.support.v7.widget.CardView>
